typ Robot : abstract {

    + core Core

    new (+ core Core)
    {
        $core = core
    }

    fun calc() : abstract

    typ Core : abstract : inner {

        - batteryPower Int

        fun activate() : abstract : protected

        sco init : protected {

            fun installProgram() : abstract

            fun installDrivers() : abstract

            fun allocateMemory() : private {}
        }

    }

}